{
  "manifest_version": 2,
  "name": "FbCommands",
  "version": "0.1",

  "permissions": [
    "debugger"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": [
        "src/char_to_keycode.js",
        "src/commands/ChatCommand.js",
        "src/ChatObserver.js",
        "src/ChatManager.js",
        "main.js",

        "src/commands/HideCommand.js",
        "src/commands/SpamCommand.js",
        "src/commands/AsciiCommand.js"
      ]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  }
}